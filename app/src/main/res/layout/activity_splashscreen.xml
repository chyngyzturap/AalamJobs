<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splash.SplashScreenActivity"
    android:background="@color/colorGreenBrand">

    <ImageView
        android:id="@+id/iv_splash_logo"
        android:layout_width="192dp"
        android:layout_height="44dp"
        android:src="@drawable/logo"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/iv_splash_downvector"
        android:layout_width="81dp"
        android:layout_height="30dp"
        android:src="@drawable/logo_vector_down"
        android:layout_below="@id/iv_splash_logo"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/iv_splash_upvector"
        android:layout_width="81dp"
        android:layout_height="23dp"
        android:src="@drawable/logo_vector_up"
        android:layout_above="@id/iv_splash_logo"
        android:layout_centerInParent="true"/>

